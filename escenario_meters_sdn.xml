<vnx xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="/usr/share/xml/vnx/vnx-2.00.xsd">
  <global>
    <version>2.0</version>
    <scenario_name>escenario_meters_sdn</scenario_name>
    <automac/>
    <vm_mgmt type="none" />
    <vm_defaults>
        <console id="0" display="no"/>
        <console id="1" display="yes"/>
    </vm_defaults>
 
  </global>

  <!--net name="Net1" mode="virtual_bridge"/-->

  <net name="Net1" mode="openvswitch" hwaddr="00:00:00:00:00:01" controller="tcp:10.1.4.2:6653" fail_mode='secure' of_version="OpenFlow13"/>

  <net name="brctl1" mode="virtual_bridge" />
  <net name="brctl2" mode="virtual_bridge" />

  <net name="MgmtNet1" mode="virtual_bridge" />
  <net name="MgmtNet2" mode="virtual_bridge" />

  <vm name="A1" type="lxc">
    <filesystem type="cow">/usr/share/vnx/filesystems/rootfs_lxc</filesystem>
    <if id="1" net="Net1">
      <ipv4>10.1.0.2/24</ipv4>
    </if>
    <route type="ipv4" gw="10.1.0.1">default</route>   
    <filetree seq="on_boot" root="/tmp/">conf/tutorial_lxc_ubuntu-sdn/hosts_meters</filetree>
    <exec seq="on_boot" type="verbatim">cat /tmp/hosts_meters >> /etc/hosts</exec>
  </vm>

  <vm name="B1" type="lxc">
    <filesystem type="cow">/usr/share/vnx/filesystems/rootfs_lxc</filesystem>
    <if id="1" net="brctl1">
      <ipv4>10.1.0.3/24</ipv4>
    </if>
    <route type="ipv4" gw="10.1.0.1">default</route>
    <filetree seq="on_boot" root="/tmp/">conf/tutorial_lxc_ubuntu-sdn/hosts_meters</filetree>
    <exec seq="on_boot" type="verbatim">cat /tmp/hosts_meters >> /etc/hosts</exec>
  </vm>

  <vm name="B2" type="lxc">
    <filesystem type="cow">/usr/share/vnx/filesystems/rootfs_lxc</filesystem>
    <if id="1" net="brctl2">
      <ipv4>10.1.0.4/24</ipv4>
    </if>
    <route type="ipv4" gw="10.1.0.1">default</route>
    <filetree seq="on_boot" root="/tmp/">conf/tutorial_lxc_ubuntu-sdn/hosts_meters</filetree>
    <exec seq="on_boot" type="verbatim">cat /tmp/hosts_meters >> /etc/hosts</exec>
  </vm>

  <vm name="r1" type="lxc">
    <filesystem type="cow">/usr/share/vnx/filesystems/rootfs_lxc</filesystem>
    <if id="1" net="Net1">
      <ipv4>10.1.0.1/24</ipv4>
    </if>
    <if id="2" net="MgmtNet1">
      <ipv4>10.1.1.1/24</ipv4>
    </if>
    <route type="ipv4" gw="10.1.1.2">10.1.1.0/24</route>
    <forwarding type="ip" />
    <filetree seq="on_boot" root="/tmp/">conf/tutorial_lxc_ubuntu-sdn/hosts_meters</filetree>
    <exec seq="on_boot" type="verbatim">cat /tmp/hosts_meters >> /etc/hosts</exec>
  </vm>


  <vm name="sdnctrl" type="lxc">
    <filesystem type="cow">/usr/share/vnx/filesystems/rootfs_sdn</filesystem>
    <if id="1" net="MgmtNet2">
      <ipv4>10.1.4.2/24</ipv4>
    </if>
    <route type="ipv4" gw="10.1.1.1">default</route>    

    <!-- floodlight se instala en el directorio raiz "/" por tanto copiamos el fichero
    "floodlight.properties" en el directorio "/floodlight" --> 
    <filetree seq="on_boot" root="/tmp/">metersmodule/</filetree>
    <exec seq="on_boot" type="verbatim">
	cp /tmp/floodlight.properties /floodlight/;
        cat /tmp/hosts_meters >> /etc/host;
	cp /tmp/net.floodlightcontroller.core.module.IFloodlightModule /floodlight/src/main/resources/META-INF/services/;
	ant -f /floodlight/build.xml;
    </exec>

  </vm>
  
  <host>
    <hostif net="MgmtNet1">
       <ipv4>10.1.1.2/24</ipv4>
    </hostif>
    <hostif net="MgmtNet2">
       <ipv4>10.1.4.1/24</ipv4>
    </hostif>
    <route type="ipv4" gw="10.1.1.1">10.1.0.0/16</route>
  </host>

</vnx>
